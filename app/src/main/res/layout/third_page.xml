<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2f2f30"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Notifications"
        android:textColor="#ffff"
        android:textSize="21.4sp" />


    <RelativeLayout
        android:id="@+id/centerBuslarge"
        android:layout_width="121dp"
        android:layout_height="121dp"
        android:layout_alignBottom="@+id/centerBus"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/circle_red"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/shape_bus_red" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/notification"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:layout_alignLeft="@+id/smallBulb"
        android:layout_alignStart="@+id/smallBulb"
        android:layout_alignTop="@+id/centerBuslarge"
        android:background="@drawable/phone_noti"
        android:visibility="gone">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/centerBus"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circle_light"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/shape_bus" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/centerBus"
        android:background="@drawable/circle_light">

        <ImageView
            android:id="@+id/yellowbulb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/shape1" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/smallBulb"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/centerBus"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/centerBus"
        android:layout_toRightOf="@+id/centerBus"
        android:background="@drawable/circle_light">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/group_4_copy" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/alien2"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_alignBottom="@+id/smallBulb"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/smallBulb"
        android:layout_toRightOf="@+id/smallBulb"
        android:background="@drawable/circle_light">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/color_shape" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="81.7dp"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="6.8sp"
        android:text="@string/potential_threats"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="14.4sp" />


</RelativeLayout>